@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Análise de vendas";
    ViewData["CSSFile"] = "~/css/admin/analysis/analysis.css";
}
<div class="analysisBody">
    <div class="optionsDiv">
        <h1>Opções de análise</h1>
        <form action="">
            <div class="row">
                <div class="inputGrp" style="width: 10vw;">
                    <label for="data">Dado analisado</label>
                    <select id="data">
                        <option value="">- Selecione -</option>
                        <option value="0">Categorias</option>
                        <option value="1">Produtos</option>
                    </select>
                </div>
                <div class="inputGrp" style="width: 10.5vw;">
                    <label for="start">Início:</label>
                    <input type="date" id="start" max="@DateTime.Now.ToString("yyyy-MM-dd")" required>
                </div>
                <div class="inputGrp" style="width: 10.5vw;">
                    <label for="end">Fim:</label>
                    <input type="date" id="end" max="@DateTime.Now.ToString("yyyy-MM-dd")" required>
                </div>
            </div>
            <div>
                <div class="row">
                    <button type="button" onclick="renderGraph()">Analisar</button>
                </div>
            </div>
        </form>
    </div>
    <div class="graphDiv">
        <div class="catGraph">
            <canvas id="catChart"></canvas>
        </div>
        <div class="prdGraph">
            <canvas id="prdChart"></canvas>
        </div>
    </div>
    <br>
</div>
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/date-fns/1.30.1/date_fns.js"></script>
<script src="https://cdn.jsdelivr.net/npm/chartjs-adapter-date-fns/dist/chartjs-adapter-date-fns.bundle.min.js"></script>
<script src="~/js/admin/analysis/analysis.js?v=1.0.@(DateTime.Now.Ticks)"></script>