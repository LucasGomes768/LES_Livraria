<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet" href="@ViewData["HeaderStyle"]" asp-append-version="true">
    <link rel="stylesheet" href="@ViewData["CSSFile"]" asp-append-version="true">

    <title>@ViewData["Title"] - Admin</title>
</head>
<body>
    <header>
        <div class="container-fluid divHeader">
            <h1>E-Commerce (Admin)</h1>
        </div>
        <div class="container-fluid divHeaderNavbar">
            <div class="divNavbarDropdown">
                <button class="btnNavbarDropdown">Clientes</button>
                <div class="Content">
                    <a asp-controller="Customer" asp-action="Create">Cadastrar</a>
                    <a asp-controller="Customer" asp-action="Read">Consultar</a>
                </div>
            </div>
        </div>
    </header>
    <main role="main">
        @RenderBody()
    </main>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
